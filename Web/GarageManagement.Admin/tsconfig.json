{
    "compilerOptions": {
        "module": "es2015",
        "target": "es6",
        "moduleResolution": "node",
        "baseUrl": "app",
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": false,
        "sourceMap": true,
        "outDir": "static",
        "jsx": "react",
        "types": [
            "node"
        ]
    },
    "filesGlob": [
        "app/**/*.ts",
        "app/**/*.tsx"
    ],
    "exclude": [
        "node_modules"
    ]
}